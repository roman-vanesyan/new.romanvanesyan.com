---
import ContentBlock from '@pages/_components/ContentBlock.astro';
import BitPreview from '@pages/_components/BitPreview.astro';
import { all_bits } from '@api';

const bits = all_bits.slice(0, 5);
---

{
  bits.length > 0 ? (
    <ContentBlock
      heading="Latest Bits"
      all={{ content: 'See all bits ->', href: '/bits' }}
      orientation="horizontal"
    >
      {bits.map((bit) => (
        <BitPreview bit={bit} />
      ))}
    </ContentBlock>
  ) : null
}
