---
import BaseLayout from '@layouts/BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
}
---

<BaseLayout {...Astro.props}>
  <slot name="head" />

  <header class="mb-8 mt-4">
    <slot name="header" />
  </header>

  <div class="flex flex-grow flex-col">
    <slot />
  </div>

  <footer>
    <slot name="footer" />
  </footer>
</BaseLayout>
